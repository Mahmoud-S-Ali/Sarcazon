<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layoutDirection="ltr"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_leaderboard_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        style="@style/Text_Header2_Bold_Light"
        tools:text="1."/>

    <ImageView
        android:id="@+id/iv_leaderboardItem_userPhoto"
        android:layout_width="@dimen/ic_size_medium"
        android:layout_height="@dimen/ic_size_medium"
        android:layout_marginLeft="@dimen/margin_medium"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_leaderboardItem_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/Text_Body1_Bold_Light"
            tools:text="Ahmed Ali"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_leaderboardItem_followersCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_Body3_Regular_Sec2_Light"
            android:layout_marginTop="@dimen/margin_x_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_leaderboardItem_likesCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        style="@style/Text_Body1_Regular_Sec2_Light"/>

    <ImageView
        android:layout_width="@dimen/ic_size_x_small"
        android:layout_height="@dimen/ic_size_x_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/ic_like_white_50"/>

</LinearLayout>