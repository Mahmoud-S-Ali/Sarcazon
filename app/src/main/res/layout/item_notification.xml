<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:layoutDirection="ltr"
    android:id="@+id/layout_notification_root">

    <ImageView
        android:id="@+id/iv_notification_userPhoto"
        android:layout_width="@dimen/civ_size_small"
        android:layout_height="@dimen/civ_size_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_notification_comicPhoto"
        android:layout_width="@dimen/civ_size_small"
        android:layout_height="@dimen/civ_size_small"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@color/background"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_notification_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/iv_notification_userPhoto"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="Mahmoud"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_notification_and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_x_small"
        android:layout_toRightOf="@id/tv_notification_userName"
        android:text="@string/and"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_notification_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_x_small"
        android:layout_toRightOf="@id/tv_notification_and"
        android:text="@string/count_others"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_notification_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_notification_userPhoto"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_below="@id/tv_notification_userName"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_toLeftOf="@id/iv_notification_comicPhoto"
        android:visibility="gone"
        tools:text="smiled your comment"
        tools:visibility="visible" />

</RelativeLayout>