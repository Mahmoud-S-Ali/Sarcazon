<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="@dimen/civ_size_medium"
        android:layout_height="@dimen/civ_size_medium"
        android:background="@drawable/shape_circle_border_white"
        android:padding="@dimen/civ_borderWidth_default"
        android:layout_marginLeft="@dimen/margin_small"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/tv_user_comicsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"/>

</LinearLayout>