<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/black_op57"
    android:orientation="vertical"
    tools:context="com.joyapeak.sarcazon.ui.tutorial.TutorialActivity">

    <TextView
        android:id="@+id/tv_tutorial_msg"
        style="@style/Text_Header1_Regular_Light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="64dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="center"
        tools:text="Welcome to Sarcazon" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_tutorial_image"
            android:layout_width="@dimen/ic_size_x_large"
            android:layout_height="@dimen/ic_size_x_large"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_tutorial_next"
            style="@style/BtnRounded"
            android:layout_width="@dimen/btn_rounded_width_large"
            android:layout_height="@dimen/btn_rounded_height_large"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>
